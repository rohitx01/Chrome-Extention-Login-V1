{
  "manifest_version": 3,
  "name": "basic email login system",
  "description": "basic email login system",
  "version": "0.1.0",
  "icons": {
    "16": "./obj-16x16.png",
    "32": "./obj-32x32.png",
    "48": "./obj-48x48.png",
    "128": "./obj-128x128.png"
  },
  "action": {
    "default_popup": "popup-sign-in.html",
    "default_popup_options": {
      "width": 600,
      "height": 800
    },
    "default_icon": {
      "16": "./obj-16x16.png",
      "48": "./obj-48x48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "background",
    "storage"
  ],
  "host_permissions": ["<all_urls>"]
}
